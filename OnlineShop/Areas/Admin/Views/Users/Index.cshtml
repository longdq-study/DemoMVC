
@using PagedList;
@using PagedList.Mvc;

@model PagedList.IPagedList<Model.EF.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header {
    Danh sách người dùng
}
@section jsFooter{
    <script src="~/assets/admin/js/Users.js"></script>
}

@section cssHeader{
    <!-- DataTables CSS -->
    <link href="/assets/admin/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/assets/admin/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

}



<script>
    function onSuccess(data) {


        console.log(data);

        console.log(data.errorMsg);
        if (data.errorCode == 0) {
            alert(data.errorMsg);
            $("#row_" + data.id).remove();
        } else {
            alert(data.errorMsg);
        }
    }
</script>

<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-success", id = "btnCreate" })
    @Html.ActionLink("Create New", "Create", null, new { id = "btnCreate2" })

</p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="tabel-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover tabel-responsive" id="user-table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().UserName)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().Phone)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().Status)
                                </th>

                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.ID">
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Cấp quyền", "Index","GrantPermissions", new { id = item.ID },null) |
                                    @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions()
                               {
                                   Confirm = "Bạn có muốn xóa người dùng này?",
                                   OnSuccess = "onSuccess",
                                   //" $('#row_" +item.ID+ "').remove()",
                                   HttpMethod = "POST"
                               }/*, new { @class = "btn btn-danger glyphicon glyphicon-trash" }*/
                                    )

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>

                                <td>
                                    <a href="#" class="btn-active" data-id="@item.ID"> @(item.Status ? "Kích hoạt" : "Khóa")</a>
                                </td>

                            </tr>
                        }

                    </table>
                    <div class="pull-right">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



